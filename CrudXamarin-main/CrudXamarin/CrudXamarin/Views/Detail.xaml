<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudXamarin.Views.Detail">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido a Delicia"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Agregar Usuario" x:Name="btnAgregar" BackgroundColor="Blue" Clicked="btnAgregar_Clicked"/>
            <Button Text="Listar Usuario" x:Name="btnListar" BackgroundColor="Blue" Clicked="btnListar_Clicked"/>
            <Button Text="Editar Usuario" x:Name="btnEditar" BackgroundColor="Blue" Clicked="btnEditar_Clicked"/>
            <Button Text="Eliminar Usuario" x:Name="btnEliminar" BackgroundColor="Blue" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>